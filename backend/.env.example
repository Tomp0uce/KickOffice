# KickOffice Backend Configuration
# Copy this file to .env and fill in the values

# Server
PORT=3003
FRONTEND_URL=http://192.168.50.10:3002
MAX_TOOLS=128

# Rate limiting (per IP)
CHAT_RATE_LIMIT_WINDOW_MS=60000
CHAT_RATE_LIMIT_MAX=20
IMAGE_RATE_LIMIT_WINDOW_MS=60000
IMAGE_RATE_LIMIT_MAX=5

# LLM API Configuration
# For testing: OpenAI API
# For production: LiteLLM endpoint (OpenAI-compatible format)
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=sk-your-api-key-here

# Model Configuration (3 tiers)
# Tier 1: Standard tasks (chat + agent)
MODEL_STANDARD=gpt-5.2
MODEL_STANDARD_LABEL=Standard
MODEL_STANDARD_MAX_TOKENS=4096
MODEL_STANDARD_TEMPERATURE=0.7
MODEL_STANDARD_REASONING_EFFORT=none
# GPT-5 only: low|medium|high. Use "none" to omit reasoning_effort and rely on provider defaults.

# Tier 2: Complex tasks (reasoning mode)
MODEL_REASONING=gpt-5.2
MODEL_REASONING_LABEL=Raisonnement
MODEL_REASONING_MAX_TOKENS=8192
MODEL_REASONING_TEMPERATURE=1
MODEL_REASONING_EFFORT=high

# Tier 3: Image generation
MODEL_IMAGE=gpt-image-1.5
MODEL_IMAGE_LABEL=Image
